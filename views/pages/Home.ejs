<%- include('../partials/header') %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Dashboard</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                    <i class="fa fa-calendar"></i>
                    This week
                </button>
            </div>
        </div>

        <h4 class="pb-4">Incoming Messages From Facebook Page</h4>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th style="width: 20%;">Recieved Date</th>
                        <th style="width: 20%;">Sender ID</th>
                        <th style="width: 50%;">Incoming Body</th>
                        <th style="width: 10%;"><span class="sr-only">actions</span></th>
                    </tr>
                </thead>
                <tbody id="messages">
                    <!-- message data will show here -->
                </tbody>
            </table>
        </div>
    </main>

    <script>
        const messages = document.querySelector('#messages');
        fetch('/webhook').then(res => res.json()).then((r) => r.forEach(({
            id, sender, text, timestamp
        }) => {
            const tr = document.createElement('tr');
            tr.innerHTML = `<td>${new Date(timestamp).toLocaleString()}</td>` +
                `<td>${sender}</td>` +
                `<td>${text}</td>` +
                '<td>' +
                `<div class="btn-group me-2">` +
                `<a class="btn btn-sm btn-outline-primary" href="/webhook/${id}?action=approved"><i class="fa fa-upload"></i></a>` +
                `<a class="btn btn-sm btn-outline-primary" href="/webhook/${id}?action=edit"><i class="fa fa-edit"></i></a>` +
                `<a class="btn btn-sm btn-outline-danger" href="/webhook/${id}?action=remove"><i class="fa fa-close"></i></a>` +
                `</div>` +
                '</td>';
            messages.appendChild(tr);
        }))
    </script>

    <%- include('../partials/footer') %>
