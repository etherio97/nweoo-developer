<%- include('../partials/header') %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Dashboard</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
                </div>
                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                    <span data-feather="calendar"></span>
                    This week
                </button>
            </div>
        </div>

        <h4 class="pb-4">Incoming Messages From Facebook Page</h4>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Recieved Date</th>
                        <th>Sender ID</th>
                        <th>Incoming Body</th>
                        <th><span class="sr-only">actions</span></th>
                    </tr>
                </thead>
                <tbody id="messages">
                    <!-- message data will show here -->
                </tbody>
            </table>
        </div>
    </main>

    <script>
        const messages = document.querySelector('#messages');
        fetch('/webhook').then(res => res.json()).then((r) => r.forEach(({
            id, sender, text, timestamp
        }) => {
            const tr = document.createElement('tr');
            tr.innerHTML = `<td>${new Date(timestamp).toLocaleString()}</td>` +
                `<td>${sender}</td>` +
                `<td>${text}</td>` +
                '<td>' +
                `<a class="btn btn-primary btn-sm mx-1" href="/webhook/${id}?action=approved">Approve</a>` +
                `<a class="btn btn-danger btn-sm mx-1" href="/webhook/${id}?action=remove">Delete</a>` +
                '</td>';
            messages.appendChild(tr);
        }))
    </script>

    <%- include('../partials/footer') %>
