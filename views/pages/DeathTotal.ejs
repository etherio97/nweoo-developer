<%- include('../partials/header') %>

  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div
      class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Update Death Total</h1>
    </div>

    <form action="/deaths/total" method="POST" class="form-floating">
      <div class="m-3">
        <label for="date" id="floatingInputValue">Updated Date</label>
        <input type="date" id="date" name="date" class="form-control" required>
      </div>
      <div class="m-3">
        <label for="death" id="floatingInputValue">Total Deaths</label>
        <input type="number" id="death" name="death" class="form-control" required>
      </div>

      <div class="d-grid gap-2 col-6 mx-auto">
        <button type="submit" class="btn btn-primary btn-block">
          Update
        </button>
      </div>
    </form>

  </main>

  <%- include('../partials/footer') %>
