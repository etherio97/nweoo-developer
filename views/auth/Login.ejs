<style>
    html,
    body {
        height: 100%;
    }
    
    body {
        display: flex;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }
    
    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
    }
    
    .form-signin .checkbox {
        font-weight: 400;
    }
    
    .form-signin .form-control {
        position: relative;
        box-sizing: border-box;
        height: auto;
        padding: 10px;
        font-size: 16px;
    }
    
    .form-signin .form-control:focus {
        z-index: 2;
    }
    
    .form-signin input[type="email"] {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
    }
    
    .form-signin input[type="password"] {
        margin-bottom: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }
    
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }
    
    @media (min-width: 768px) {
        .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }
    }
</style>

<body class="text-center">

    <main class="form-signin">
        <form action="/login" method="POST">
            <img class="mb-4" src="https://raw.githubusercontent.com/etherio/nwe-oo-vue/master/src/assets/nweoo-logo-text.png" alt="Nwe Oo" width="72" height="72">
            <h1 class="h3 mb-3 fw-normal">
                Developer Login
            </h1>

            <label for="inputEmail" class="visually-hidden">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required autofocus>

            <label for="inputPassword" class="visually-hidden">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Password">

            <% if (errors.length) { %>
                <div class="alert alert-danger" role="alert">
                    <ul class="mb-0 px-4">
                        <% for (let error of errors) { %>
                            <li class="text-start">
                                <%- error %>
                            </li>
                            <% } %>
                    </ul>
                </div>
                <% } %>

                    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                    <a class="mt-2 w-100 btn btn-secondary" href="/register">Create an account</a>
                    <p class="mt-5 mb-3 text-muted">&copy; 2020 NweOo.</p>
        </form>
    </main>



</body>

</html>